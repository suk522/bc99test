
<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f8f9fa;
    }
    .main-content {
      min-height: 100vh;
      background: #fff;
    }
    .hamburger-icon {
      display: flex;
      flex-direction: column;
      gap: 5px;
      cursor: pointer;
      padding: 10px;
      z-index: 1100;
    }
    .hamburger-line {
      width: 25px;
      height: 3px;
      background-color: #333;
      transition: 0.3s;
    }
    .offcanvas {
      width: 50% !important;
    }
    
    /* Admin styles */
    body.admin-page {
      background: #f5f5f5;
    }
    .admin-page .main-content {
      background: #fff;
      color: #333;
    }
    .admin-page .card {
      background: #fff;
      border: 1px solid #e0e0e0;
    }
    .admin-page .btn-primary {
      background: #666;
      border-color: #555;
    }
    .admin-page .btn-primary:hover {
      background: #555;
      border-color: #444;
    }
    .admin-page .btn-success {
      background: #4a4a4a;
      border-color: #3a3a3a;
    }
    .admin-page .btn-danger {
      background: #8a8a8a;
      border-color: #7a7a7a;
    }
    .admin-page .table {
      color: #333;
    }
    .admin-page .nav-tabs .nav-link {
      color: #666;
    }
    .admin-page .nav-tabs .nav-link.active {
      color: #333;
      border-color: #666;
    }
    .admin-page .form-control {
      border-color: #ddd;
    }
  </style>
</head>
<body<% if (path.startsWith('/admin')) { %> class="admin-page"<% } %>>
  <% if (user && !path.startsWith('/admin')) { %>
    <!-- Hamburger Icon -->
    <div class="hamburger-icon position-fixed top-0 start-0 mt-3 ms-3" data-bs-toggle="offcanvas" data-bs-target="#sideMenu" aria-controls="sideMenu">
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
      <div class="hamburger-line"></div>
    </div>

    <!-- Offcanvas Sidebar -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sideMenu" aria-labelledby="sideMenuLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="sideMenuLabel">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <!-- User Info Card -->
        <div class="card mb-4">
          <div class="card-body">
            <h5>Username: <%= user.username %></h5>
            <p class="mb-0">User ID: <%= user.uid %></p>
          </div>
        </div>
        
        <!-- Navigation Links -->
        <div class="list-group mb-4">
          <a href="/home" class="list-group-item list-group-item-action">Home</a>
          <a href="/activity" class="list-group-item list-group-item-action">Activity</a>
          <a href="/wallet" class="list-group-item list-group-item-action">Wallet</a>
          <a href="/account" class="list-group-item list-group-item-action">Account</a>
        </div>
        
        <!-- Logout Button -->
        <form action="/logout" method="POST">
          <button type="submit" class="btn btn-danger w-100">Logout</button>
        </form>
      </div>
    </div>
  <% } %>
  <div class="main-content">
    <%- body %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
