  margin-top: 20px;
}

.game-row {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 20px;
}

.game-card {
  width: 120px;
  height: 120px;
  background: var(--card-bg) !important;
  border: 1px solid var(--gold);
  border-radius: 10px;
  overflow: hidden;
  transition: transform 0.3s ease;
  padding: 5px;
}

.game-card:hover {
