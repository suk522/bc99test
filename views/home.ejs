
<div class="container game-theme">
  <div class="user-info">
    <div class="user-info-left">
      <img src="<%= user.profileImage || '/attached_assets/activit.png' %>" alt="Avatar" class="user-avatar">
      <span class="user-uid">UID: <%= user.uid %></span>
    </div>
    <div class="user-info-right">
      <div class="balance-display">
        <span class="balance-text">â‚¹<span id="balanceAmount"><%= user.balance.toFixed(2) %></span></span>
        <i class="fas fa-sync-alt refresh-icon ms-2" onclick="refreshBalance()"></i>
      </div>
    </div>
  </div>

  <div class="game-grid">
    <div class="game-row">
      <div class="game-card">
        <a href="/games/wingo" class="game-link">
          <img src="/attached_assets/wingo.png" alt="Wingo">
          <span class="game-title">Wingo</span>
        </a>
      </div>

      <div class="game-card">
        <a href="/games/aviator" class="game-link">
          <img src="/attached_assets/avaitor.png" alt="Aviator">
          <span class="game-title">Aviator</span>
        </a>
      </div>
    </div>

    <div class="game-row">
      <div class="game-card">
        <a href="/games/slots" class="game-link">
          <img src="/attached_assets/slots.png" alt="Slots">
          <span class="game-title">Slots</span>
        </a>
      </div>

      <div class="game-card">
        <a href="/games/dragon-vs-tiger" class="game-link">
          <img src="/attached_assets/4B6BtJkNpEdguIAI12w2--2--0srjk_6x.jpg" alt="Dragon vs Tiger">
          <span class="game-title">Dragon vs Tiger</span>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
function refreshBalance() {
  fetch('/wallet/balance')
    .then(response => response.json())
    .then(data => {
      document.getElementById('balanceAmount').textContent = data.balance.toFixed(2);
    });
}
</script>

