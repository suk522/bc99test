modules = ["nodejs-20", "web"]
hidden = [".config", "package-lock.json"]
run = "node index.js"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "node index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 41808088
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "nodemon --watch '**/*.js' --watch '**/*.ejs' --watch '**/*.css' --ext js,ejs,css --ignore 'node_modules/' --legacy-watch index.js"
